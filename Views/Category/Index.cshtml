@model List<FoodAndCore.Data.Models.Category>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<br />
@using (Html.BeginForm())
{
	<p>
		Food Name:@Html.TextBox("p")
		<input type="submit" value="Find" />
	</p>
}
<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Category Name</th>
		<th>Status</th>
		<th>Delete</th>
		<th>Update</th>


	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.Id</td>
			<td>@x.Name</td>
			<td>@x.Status</td>
			<td><a href="/Category/CategoryDelete/@x.Id" class="btn btn-danger">Delete</a>
			<td><a href="/Category/CategoryGet/@x.Id" class="btn btn-success">Update</a>
		</tr>

	}
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>
