@model FoodAndCore.Data.Models.Category
@{
	ViewData["Title"]="CategoryGet";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Category Add Page</h2>
<br />
	@* if(@Html.LabelFor(x=>x.Status) == true) *@
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
	@Html.LabelFor(x => x.Id)
	@Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
	
	<br />
	@Html.LabelFor(x => x.Name)
	@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
	@Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
	<br />
	@Html.LabelFor(x => x.Description)
	@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
	<br />
	<button class="btn btn-warning">Update</button>
}