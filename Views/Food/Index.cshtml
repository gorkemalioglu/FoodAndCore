@using X.PagedList;
@using X.PagedList.Mvc.Core

@model IPagedList<FoodAndCore.Data.Models.Food>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Food List</h2>
<br />
<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Food Name</th>
		<th>Price</th>
		<th>Stock</th>
		<th>Category Name</th>
		<th>Delete</th>
		<th>Update</th>
		<th>Details</th>


	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<th>@x.Id</th>
			<td>@x.Name</td>
			<td>@x.Price</td>
			<td>@x.Stock</td>
			<td>@x.Category.Name</td>
			<td><a href="/Food/DeleteFood/@x.Id" class="btn btn-danger">Delete</a>
			<td><a href="/Food/FoodGet/@x.Id" class="btn btn-success">Update</a>
			<td><a href="#" class="btn btn-info">Details</a>
		</tr>

	}
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
<a href="/Food/AddFood/" class="btn btn-primary">New Food</a>

